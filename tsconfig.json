{
  "compilerOptions": {
    "lib": ["es2023"],
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "rootDir": "./src",
    "outDir": "lib",

    "types": ["@types/node"],
  },

  "exclude": ["lib"]
}
